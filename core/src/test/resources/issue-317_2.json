{
  "openapi":"3.0.0",
  "info":{
    "title":"API",
    "version":"0.1.0"
  },
  "paths":{
    "/resource":{
      "post":{
        "responses":{
          "200":{
            "description":"Created resource",
            "content":{
              "application/json":{
                "schema":{
                  "type":"string"
                }
              }
            }
          }
        },
        "summary":"Create resource",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/Resource"
              }
            }
          },
          "description":"Definition of the resource"
        }
      }
    }
  },
  "components":{
    "schemas":{
      "Resource":{
        "type":"object",
        "properties":{
          "assignment":{
            "default":{
              "type":"Bar"
            },
            "allOf":[
              {
                "$ref":"#/components/schemas/Foo"
              }
            ]
          }
        }
      },
      "Foo":{
        "oneOf":[
          {
            "$ref":"#/components/schemas/Foo.Bar"
          },
          {
            "$ref":"#/components/schemas/Foo.Baz"
          }
        ],
        "discriminator":{
          "propertyName":"type",
          "mapping":{
            "Bar":"#/components/schemas/Foo.Bar",
            "Baz":"#/components/schemas/Foo.Baz"
          }
        }
      },
      "Foo.Bar":{
        "type":"object",
        "properties":{
          "type":{
            "type":"string"
          }
        }
      },
      "Foo.Baz":{
        "type":"object",
        "properties":{
          "type":{
            "type":"string"
          }
        }
      }
    },
    "securitySchemes":{

    }
  }
}
